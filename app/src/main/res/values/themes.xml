<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RappiTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RappiTestActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Status bar color. -->

        <item name="backgroundColor">@color/black</item>
        <item name="title">eMovie</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Sub_titulo" >
        <item name="font">@font/poppins_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextoEnBottones" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="font">@font/poppins_normal</item>
    </style>
    <style name="textoGenero" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="font">@font/poppins_normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">15</item>
        <item name="android:shadowDy">15</item>
        <item name="android:shadowRadius">30</item>
        <item name="android:lineSpacingMultiplier">0.7</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextoEnTituloPrincipal" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="font">@font/poppins_normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">15</item>
        <item name="android:shadowDy">15</item>
        <item name="android:shadowRadius">30</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="Sinopsis" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/poppins_normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="materialButtonOutlinedStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>

    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="title">eMovie</item>
        <item name="colorPrimary">@color/fondo_negro</item>
        <item name="colorPrimaryDark">@color/fondo_negro</item>
        <item name="fontFamily">@font/poppins_normal</item>
        <item name="colorAccent">@color/white</item>
    </style>
</resources>